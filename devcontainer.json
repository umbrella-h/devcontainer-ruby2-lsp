{
	"name": "course_api_example-ruby_dx",

	"dockerComposeFile": [
		"docker-compose.yml",
		"docker-compose.override.yml"
	],
	"service": "application",
	"workspaceFolder": "/usr/workspace",
	"shutdownAction": "stopCompose",
	"customizations": {
		"vscode": {
			"settings": {
				"#terminal.integrated.profiles.linux#": "/bin/bash",
        "[ruby]": {
          "editor.defaultFormatter": "Shopify.ruby-lsp"
        },
        "rubyLsp.rubyExecutablePath": "/usr/local/bin/ruby",
        "rubyLsp.bundleGemfile": "/usr/workspace/.devcontainer/ruby-extensions/Gemfile"
			},
			"extensions": [
        "Shopify.ruby-lsp"
			]
		}
	}
}
